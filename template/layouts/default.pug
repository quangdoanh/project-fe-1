doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    block title
    <link href="assets/images/logo_me.jpg" rel="icon" type="image/x-icon">
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css")
    link(rel="stylesheet" href="assets/css/style.css")
  body

    //- Header
    header.header
      .container
        .header__wrap
          //- Menu Mobile
          button.header__menu-mobile
            i(class="fa-solid fa-bars")

          //- Logo
          .header__logo
            a(href="index.html")
              img(src="assets/images/logo.svg" alt="Monito")

          //- Menu
          nav.header__menu
            ul
              li
                a(href="index.html") Trang Chủ
              li
                a(href="#") Danh Mục
              li
                a(href="#") Giới Thiệu
              li
                a(href="#") Liên Hệ

          //- Search
          button.header__search-mobile
            i(class="fa-solid fa-magnifying-glass")
          form(action="#" class="header__form")
            input(name="keyword" placeholder="Nhập từ khóa...")
            button
              i(class="fa-solid fa-magnifying-glass")

          //- Button
          a(href="#" class="button") Tham Gia Cộng Đồng
    //- End Header
    block main

    footer.footer
        .container
            .footer__top
                .footer__content Đăng ký ngay để không bỏ lỡ các chương trình của chúng tôi
                form(action="" class="footer__form") 
                    input(type="email" name="" placeholder="Nhập email của bạn")
                    button Đăng ký Ngay 
            .footer__middle 
                nav.footer__links 
                    ul 
                        li 
                            a(href="#") Trang chủ 
                        li 
                            a(href="#") Danh mục 
                        li 
                            a(href="#") Giới thiệu 
                        li 
                            a(href="#") Liên hệ
                nav.footer__socials 
                    ul 
                        li 
                            a(href="#" target="blank")
                                i(class="fa-brands fa-facebook")          
                        li 
                            a(href="#" target="blank")
                                i(class="fa-brands fa-x-twitter")          
                        li 
                            a(href="#" target="blank")
                                i(class="fa-brands fa-instagram")          
                        li 
                            a(href="#" target="blank")
                                i(class="fa-brands fa-youtube") 
            .footer__bottom 
                .footer__copyright © 2023 28Tech. All rights reserved.
                .footer__logo
                    a(href="index.html")
                        img(src="assets/images/logo.svg" alt="")  
                nav.footer__links-nav 
                    ul 
                        li 
                            a(href="#") Điều khoản dịch vụ        
                        li 
                            a(href="#") Chính sách bảo mật 